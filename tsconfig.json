{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "baseUrl": ".",
    "paths": {
      "@did-btc1/cryptosuite": [
        "./packages/cryptosuite/src"
      ],
      "@did-btc1/key-pair": [
        "./packages/key-pair/src"
      ],
      "@did-btc1/method": [
        "./packages/method/src"
      ],
    }
  },
  "exclude": [
    "eslint.config.cjs",
    "node_modules",
    "lib"
  ]
}