{
  "name": "@did-btc1/local-key-manager",
  "version": "0.1.0",
  "type": "module",
  "description": "Local key manager for did-btc1 using Data Integrity Schnorr secp256k1 Cryptosuite v0.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "license": "MPL-2.0",
  "homepage": "https://github.com/jintekc/did-btc1-local-key-manager",
  "respository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jintekc/did-btc1-local-key-manager.git"
  },
  "bugs": "https://github.com/jintekc/did-btc1-local-key-manager/issues",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "did",
    "dids",
    "decentralized identity",
    "decentralized identifiers",
    "did method",
    "did:btc1",
    "bitcoin"
  ],
  "scripts": {
    "start": "node ./dist/cjs/index.js",
    "clean": "rimraf dist coverage tests/compiled",
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "rimraf dist/esm dist/types && pnpm tsc -p tsconfig.json",
    "build:cjs": "rimraf dist/cjs && tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json"
  },
  "dependencies": {
    "@noble/curves": "^1.8.1",
    "@web5/dids": "^1.2.0",
    "multiformats": "^13.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/eslint": "^9.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.15.0",
    "mocha": "^11.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "node-stdlib-browser": "^1.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}