{
  "name": "@did-btc1/bip340-key-pair",
  "version": "0.4.1",
  "type": "module",
  "description": "JavaScript/TypeScript implementation of a secp256k1 public/private key pairs with BIP340 schnorr signatures. Implementated for use within the @did-btc1/bip340-2025-cryptosuite.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "license": "MPL-2.0",
  "contributors": [
    {
      "name": "jintekc",
      "email": "info@jintek.consulting",
      "url": "https://github.com/jintekc"
    }
  ],
  "homepage": "https://github.com/jintekc/bip340-key-pair",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jintekc/bip340-key-pair.git"
  },
  "bugs": "https://github.com/jintekc/bip340-key-pair",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "did",
    "dids",
    "decentralized identity",
    "decentralized identifiers",
    "did method",
    "did:btc1",
    "bitcoin",
    "data integrity",
    "schnorr",
    "schnorr signatures",
    "secp256k1",
    "secp256k1 key pair",
    "cryptosuite",
    "bip340",
    "bip340 key pair",
    "data integrity bip340",
    "data integrity bip340 cryptosuite"
  ],
  "scripts": {
    "del": "rimraf",
    "clean": "rimraf dist coverage tests/compiled",
    "wipe": "rimraf node_modules pnpm-lock.json",
    "wipe:clean": "pnpm wipe && pnpm clean",
    "reinstall": "pnpm wipe:clean && pnpm install",
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "rimraf dist/esm dist/types && pnpm tsc -p tsconfig.json",
    "build:cjs": "rimraf dist/cjs && tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
    "build:tests": "pnpm build && pnpm tsc -p tests/tsconfig.json",
    "release": "pnpm build && pnpm pack && mv *.tgz ../../release/key-pair",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "pnpm build && pnpm build:tests && pnpm c8 mocha",
    "test:node": "pnpm c8 mocha",
    "build:lint:test": "pnpm build && pnpm build:tests && pnpm lint:fix",
    "prepublish": "pnpm build && pnpm release",
    "version": "pnpm version",
    "version:no-git": "pnpm version --no-commit-hooks --no-git-tag-version",
    "version:new": "[ -z \"$NEW_VERSION\" ] && echo 'ERROR: NEW_VERSION is not set' && exit 1 || (git checkout -b $NEW_VERSION && git tag $NEW_VERSION && pnpm version:no-git $NEW_VERSION)"
  },
  "dependencies": {
    "@noble/hashes": "^1.7.1",
    "multiformats": "^13.3.2",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/eslint": "^9.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.15.0",
    "mocha": "^11.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "node-stdlib-browser": "^1.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}
